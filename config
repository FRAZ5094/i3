#primary monitor bar
bar {
  font pango: Awesome-fonts 12
  tray_output primary
  output primary
  workspace_buttons yes
  position top
  colors {
        background $base00
        statusline $base0E
        separator $base0E

        #border color background color text color
        focused_workspace  $base0D $base0D #0f0f0f
        active_workspace $base0D $base0D #0f0f0f
        inactive_workspace $base00 $base04 #0f0f0f
        urgent_workspace $base00  $base00 #0f0f0f
    }
  status_command bumblebee-status \
		-m pacman kernel uptime date time \
		-p sensors.json="true"  sensors.path="k10temp-pci-00c3/Tccd1/temp3_input" pacman.sum="true" nvidiagpu.format="{mem_used}MiB {fanspeed}% {temp}°C" cpu2.layout="cpu2.cpuload cpu2.coresload" nic.exclude="enp6s0, lo" nic.format="{state} {ip}" sensors2.showother="false"  time.format="%l:%M:%S %p" date.format="%a, %d/%m/%y"  \
		-t night-powerline
}
